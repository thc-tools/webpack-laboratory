{
    "packages": [
        "packages/quarks/*",
        "packages/atoms/*",
        "packages/webpack-chemistry"
    ],
    "version": "independent",
    "command": {
        "init": {
            "exact": true
        },
        "bootstrap": {
            "npmClientArgs": [
                "--no-package-lock"
            ]
        },
        "command": {
            "publish": {
                "conventionalCommits": true
            }
        }
    }
}